<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.neckbeardproductions.studybuddy.fragments.AddResourceFragment">

    <EditText
        android:id="@+id/add_resource_name_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Resource Name"/>

    <EditText
        android:id="@+id/add_resource_uri_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Resource URL"/>

</LinearLayout>
